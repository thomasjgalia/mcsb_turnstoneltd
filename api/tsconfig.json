# Create the tsconfig.json content
$tsconfigContent = @'
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "archived"
  ]
}
'@

Set-Content -Path "api\tsconfig.json" -Value $tsconfigContent
Write-Host "âœ“ Created api/tsconfig.json" -ForegroundColor Green